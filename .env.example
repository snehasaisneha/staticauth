# App Config
APP_NAME="StaticAuth"
APP_URL="http://localhost:8000"
FRONTEND_URL="http://localhost:4321"
SECRET_KEY="your-secret-key-min-32-chars-long-here"

# Database
DATABASE_URL="sqlite+aiosqlite:///./staticauth.db"
# DATABASE_URL="postgresql+asyncpg://user:pass@localhost/staticauth"

# Email - Common
EMAIL_PROVIDER="ses"  # or "smtp"
EMAIL_FROM_NAME="StaticAuth"

# Email - SES
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
SES_FROM_EMAIL="noreply@yourdomain.com"

# Email - SMTP
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL=""

# Auth Config
ACCEPTED_DOMAINS="yourdomain.com,anotherdomain.com"
OTP_EXPIRY_MINUTES=10
SESSION_EXPIRY_DAYS=30
COOKIE_DOMAIN="yourdomain.com"  # Required for production - set to your domain

# WebAuthn
WEBAUTHN_RP_ID="localhost"
WEBAUTHN_RP_NAME="StaticAuth"
WEBAUTHN_ORIGIN="http://localhost:4321"

# Server
SERVER_HOST="0.0.0.0"
SERVER_PORT=8000
SERVER_RELOAD=true  # Set to false in production
