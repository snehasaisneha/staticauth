# Production environment for StaticAuth
# Copy to .env-staticauth and fill in values

# App Config
APP_NAME="Engineering Docs"
APP_URL="https://engg.artpark.ai"
FRONTEND_URL="https://engg.artpark.ai"
SECRET_KEY="CHANGE_ME_TO_A_RANDOM_32_CHAR_STRING"

# Database
DATABASE_URL="sqlite+aiosqlite:///./staticauth.db"

# Admin Setup
ADMIN_EMAIL="admin@artpark.ai"

# Email - SES
EMAIL_PROVIDER="ses"
EMAIL_FROM_NAME="Engineering Docs"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ap-south-1"
SES_FROM_EMAIL="noreply@artpark.ai"

# Auth Config
ACCEPTED_DOMAINS="artpark.ai"
OTP_EXPIRY_MINUTES=10
SESSION_EXPIRY_DAYS=30

# WebAuthn
WEBAUTHN_RP_ID="engg.artpark.ai"
WEBAUTHN_RP_NAME="Engineering Docs"
WEBAUTHN_ORIGIN="https://engg.artpark.ai"

# Server
SERVER_HOST="127.0.0.1"
SERVER_PORT=8001
SERVER_RELOAD=false
